<div class="logger  flex flex--j-center">
    <div class="logger__container__background"></div>
    <div class="logger__container__main">
        <h1>thibacrime</h1>
        <p>Crime reporting and tracking</p>
        <div class="error-container" style="margin-top: 1rem;" id="sign-in-error">
            <p class="error-container__p">
                <span class="error-container__p__exclamation">Oops.</span>
                <span class="error-container__p__text"></span>
            </p>
        </div>
        <form class="card logger__container__main__form"  id="sign-in-form">
            <div class="logger__container__main__form__login-options flex">
                <div class="logger__container__main__form__login-options__option logger__container__main__form__login-options__option--active" data-logintype="resident">
                    <p>Resident</p>
                </div>
                <div class="logger__container__main__form__login-options__option" data-logintype="police">
                    <p>Police agent</p>
                </div>
                <div class="logger__container__main__form__login-options__option" data-logintype="admin">
                    <p>Admin</p>
                </div>
            </div>
            <div class="card__header card__header--no-border">
                <h1>Sign in.</h1>
            </div>
            <div class="card__body">
                <div class="input-wrapper">
                    <label for="email-address">Email address</label>
                    <input type="text" id="email-address" class="input-wrapper__input" placeholder="johndoe@gmail.com">
                </div>
                <div class="input-wrapper">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="input-wrapper__input" placeholder="123">
                    <p class="logger__container__main__form__forgot-pass">Forgot?</p>
                </div>
            </div>
            <div class="card__footer card__footer--no-border">
                <button type="submit" class="btn btn--primary">Sign in.</button>
            </div>
        </form>
        <nav class="logger__container__main__footer">
            <ul class="flex flex--j-space-around">
                <li><a href="/sign-up">No account?</a></li>
                <li>Terms and conditions</li>
                <li>Privacy policy</li>
            </ul>
        </nav>
    </div>
</div>

<script>
    const targetPage = 'sign-in';
    let lastActiveElement = $('.logger__container__main__form__login-options__option--active')[0];

    $('.logger__container__main__form__login-options__option').on('click', e => {
        if (Array.from(e.currentTarget.classList).includes('logger__container__main__form__login-options__option--active'))
            return;

        if (lastActiveElement)
            lastActiveElement.classList.remove('logger__container__main__form__login-options__option--active');

        e.currentTarget.classList.add('logger__container__main__form__login-options__option--active');

        lastActiveElement = e.currentTarget;
    });
</script>