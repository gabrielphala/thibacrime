            <a href="/a/reports" class="sidenav__top__item__icon flex flex--j-center">
                <svg class="image--icon">
                    <use href="#file"></use>
                </svg>
            </a>
            <div class="sidenav__top__item__link-text">
                <a href="/a/reports">Reports</a>
            </div>
        </div>
    </div>
    <div class="sidenav__bottom">
        <div class="sidenav__bottom__item flex flex--a-center">
            <a href="/a/logout" class="sidenav__bottom__item__icon flex flex--j-center">
                <svg class="image--icon">
                    <use href="#sign-out"></use>
                </svg>
            </a>
            <div class="sidenav__bottom__item__link-text">
                <a href="/a/logout">Sign out</a>
            </div>
        </div>
    </div>
