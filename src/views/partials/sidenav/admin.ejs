                <svg class="image--icon">
                    <use href="#menu"></use>
                </svg>
            </div>
        </div>
        <div class="sidenav__top__item <% if (page.title == 'Police stations') { %> sidenav__top__item--active <% } %> flex flex--a-center">
            <a href="/a/police-station" class="sidenav__top__item__icon flex flex--j-center">
                <svg class="image--icon">
                    <use href="#file"></use>
                </svg>
            </a>
            <div class="sidenav__top__item__link-text">
                <a href="/a/police-station">Police stations</a>
            </div>
        </div>
        <div class="sidenav__top__item <% if (page.title == 'Residents') { %> sidenav__top__item--active <% } %> flex flex--a-center">
            <a href="/a/residents" class="sidenav__top__item__icon flex flex--j-center">
                <svg class="image--icon">
                    <use href="#file"></use>
                </svg>
            </a>
            <div class="sidenav__top__item__link-text">
